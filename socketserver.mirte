includes:
  - selectPool
  - threadPool
definitions:
  socketServer:
    settings:
      selectPool: { type: selectPool }
      threadPool: { type: threadPool }
      backlog: { type: int, default: 3 }
    run: true
  unixSocketServer:
    inherits: [ socketServer ]
    settings:
      socketPath: { type: str }
  tcpSocketServer:
    inherits: [ socketServer ]
    settings:
      host: { type: str, default: 0.0.0.0 }
      port: { type: str }
